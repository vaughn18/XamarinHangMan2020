            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:layout_margin="2dip"
            android:tag="T" />
        <Button
            android:text="Y"
            android:id="@+id/btnY"
            android:background="#DA2812"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:layout_margin="2dip"
            android:tag="Y" />
        <Button
